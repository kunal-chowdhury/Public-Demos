<Window x:Class="WPF.ListView.Group.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WPF.ListView.Group.Demo.Converters"
        x:Name="window" Title="List View Group Demo" Height="250" Width="500">
    <Grid>
        <ListView ItemsSource="{Binding Employees, ElementName=window}">
            <ListView.Resources>
                <converters:CollectionViewGroupToFieldConverter x:Key="CollectionViewGroupToFieldConverter"/>
            </ListView.Resources>
            
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="220"/>
                    <GridViewColumn Header="Role" DisplayMemberBinding="{Binding Role}" Width="200"/>
                </GridView>
            </ListView.View>
            
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="False" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Converter={StaticResource CollectionViewGroupToFieldConverter}}" FontWeight="Bold" Foreground="Gray" FontSize="20"/>
                                                    <TextBlock Text="{Binding ItemCount}" Foreground="Green" FontWeight="Bold" FontStyle="Italic" Margin="4,0,0,0" FontSize="20"/>
                                                    <TextBlock Text=" employee(s)" Foreground="Silver" FontStyle="Italic" FontSize="20"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
    </Grid>
</Window>
